@using Entitiy_layer.Concrete
@model List<Reservation2>
@{
    ViewData["Title"] = "MyOldReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Geçmiş Rezervasyonlarım</h1>


<table class="table table-bordered">
    <tr>
        <th> #</th>
        <th>Lokasyon</th>
        <th>Kişi Sayısı</th>
        <th>Rezervasyon Tarihi</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Reservation2ID</td>
            <td>@item.Destination.City</td>
            <td>@item.PersonCount2</td>
            <td>@item.ReservastionDate2</td>
            <td>@item.Status2</td>
        </tr>
    }
</table>

