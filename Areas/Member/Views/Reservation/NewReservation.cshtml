@model Entitiy_layer.Concrete.Reservation2

@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    
}

<h1>Yeni Rezervasyon Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Lokasyon")
        @Html.DropDownListFor(x => x.DestinationID, (IEnumerable<SelectListItem>)ViewBag.v, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.Label("Kişi Sayısı")
        <input type="text" asp-for="PersonCount2" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Tarih")
        <input type="date" asp-for="ReservastionDate2" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Varsa Eklemek İstedikleriniz")
        <input type="text" asp-for="Description2" class="form-control" />
    </div>
    <button class="btn btn-outline-success">
    Rezervasyon Yap
    </button>
</form>

