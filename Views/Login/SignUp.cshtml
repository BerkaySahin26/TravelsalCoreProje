<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Merhaba de</h5>
							<h3>Hesap oluştur </h3>
							<p>
								Lorem ipsum, dolor sit amet consectetur adipisicing elit. Est natus facere aperiam!
								Tenetur maiores dolore a quod pariatur ut voluptates quae saepe ea quasi laudantium,
								iste molestias inventore fuga assumenda.
							</p>
							<a href="index.html" class="read-more-1 btn">Get Started</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bize katılın</h4>
						<p>Ücretsiz bir şekilde hesabınızı oluşturun.</p>
					</div>
					<form action="#" method="post" class="signin-form">
						<div class="form-input">
							<label>Name</label>
							<input type="text" asp-for ="Name" />
							<span asp-validation-for="Name"> </span>
						</div>
						<div class="form-input">
							<label>Surname</label>
							<input type="text"  asp-for ="Surname" />
							<span asp-validation-for="Surname"></span>

						</div> 
						<div class="form-input">
							<label>UserName</label>
							<input type="text"  asp-for ="Username" />
							<span asp-validation-for="Username"></span>
						</div>
						<div class="form-input">
							<label>Email</label>
							<input type="email" asp-for="Mail" />
							<span asp-validation-for="Mail"></span>
						</div>
						<div class="form-input">
							<label>Password</label>
							<input type="password" asp-for="Password" />
							<span asp-validation-for="Password"></span>
						</div> 
						<div class="form-input">
							<label>Password</label>
							<input type="password" asp-for="ConfirmPassword" />
							<span asp-validation-for="ConfirmPassword"></span>
						</div>
						<div class="text-danger" asp-validation-summary="ModelOnly"></div>

						<label class="container">
							 <a href="#">Okudum onayladım</a> 
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Hesabı oluştur</button>
					</form>
					<div class="copy-right text-center">
						<p>
							© @DateTime.Now.Year Tüm haklar saklıdır.
							<a href="http://w3layouts.com/" target="_blank">W3layouts</a>
						</p>
					</div>
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>

</html>